{
  "name": "actions-msteams",
  "version": "1.0.0",
  "description": "Send messages to Microsoft Teams",
  "license": "MIT",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "all": "yarn run build && yarn run format && yarn run lint && yarn run pack"
  },
  "dependencies": {
    "@actions/core": "1.2.6",
    "request": "2.88.2"
  },
  "devDependencies": {
    "@types/node": "^13.11.1",
    "@types/request": "^2.48.4",
    "@typescript-eslint/parser": "^2.8.0",
    "@zeit/ncc": "^0.22.1",
    "eslint": "^6.8.0",
    "eslint-plugin-github": "^3.4.1",
    "js-yaml": "^3.13.1",
    "prettier": "^2.0.4",
    "typescript": "^3.7.4"
  }
}
