{
  "name": "actions-msteams",
  "version": "1.0.0",
  "description": "Send messages to Microsoft Teams",
  "license": "MIT",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "all": "yarn run build && yarn run format && yarn run lint && yarn run pack"
  },
  "dependencies": {
    "@actions/core": "1.10.0",
    "request": "2.88.2"
  },
  "devDependencies": {
    "@types/node": "^20.1.2",
    "@types/request": "^2.48.8",
    "@typescript-eslint/parser": "^5.59.5",
    "@zeit/ncc": "^0.22.3",
    "eslint": "^8.40.0",
    "eslint-plugin-github": "^4.7.0",
    "js-yaml": "^4.1.0",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4"
  }
}
